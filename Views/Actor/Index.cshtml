@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List of Actors";
}


<h1>Welcome to Actor View</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.fullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.fullName" style="max-width: 150px " /></td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.fullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                            </td>
                        <td class="align-middle">
                            <a class=" btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.aId"><i class="bi bg-pencil-square "></i>Edit</a>
                                <a class =" btn btn-outline-info" asp-action="Details" asp-route-id="@item.aId"><i class="bi bi-eye "></i>Details</a>
                            <a class=" btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.aId"><i class="bi bi-pencil-square "></i>Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
            </table>
</div>
</div>

<div style="position: fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New </a>

</div>
