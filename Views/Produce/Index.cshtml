@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List of Producers";
}


<h1>Welcome to Actor View</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.picURL)</th>
                    <th>@Html.DisplayNameFor(model => model.fullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img class="rounded-circle" src="@item.picURL" alt="@item.fullName" style="max-width: 150px " /></td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.fullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class=" btn btn-outline-primary"><i class="bi bg-pencil-square "></i>Edit</a>
                            <a class=" btn btn-outline-info"><i class="bi bi-eye "></i>Details</a>
                            <a class=" btn btn-outline-danger"><i class="bi bi-pencil-square "></i>Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>